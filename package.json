{
  "name": "node-typescript-starter",
  "version": "0.1.0",
  "description": "Boilerplate to kickstart your npm lib",
  "engineStrict": true,
  "engines": {
    "node": ">=8.9"
  },
  "main": "./lib/src/index.js",
  "scripts": {
    "clean": "rm -rf lib",
    "format": "prettier --write '{src,test}/**/*.ts'",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "prebuild": "npm run clean && npm run format && npm run lint",
    "build": "tsc --project tsconfig.json --pretty",
    "build:watch": "tsc --watch --project tsconfig.json --pretty",
    "pretest": "npm run format && npm run lint && npm run build",
    "test": "mocha test/**/*.test.ts",
    "test-only": "mocha test/**/*.test.ts",
    "test:watch": "mocha --watch --reporter min",
    "precommit": "lint-staged"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "lint-staged": {
    "*.{ts}": [
      "npm run format",
      "npm run lint"
    ],
    "*.{ts,js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "4.1.2",
    "@types/mocha": "2.2.48",
    "@types/sinon": "4.1.3",
    "chai": "4.1.2",
    "husky": "0.14.3",
    "lint-staged": "6.1.0",
    "mocha": "5.0.0",
    "prettier": "1.10.2",
    "sinon": "4.2.2",
    "ts-node": "4.1.0",
    "tslint": "5.9.1",
    "typescript": "2.7.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chipp972/cryptobot-op.git"
  },
  "author": "Nicolas Pierre-Charles <pierrecharles.nicolas@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chipp972/cryptobot-op/issues"
  },
  "homepage": "https://github.com/chipp972/cryptobot-op#readme"
}
